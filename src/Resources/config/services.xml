<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <!-- SMS Service -->
        <service id="Vhdev\AdminSmsOrderNotificationFree\Service\SmsService" public="true">
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService"/>
            <argument type="service" id="logger"/>
        </service>

        <!-- Order Event Subscriber -->
        <service id="Vhdev\AdminSmsOrderNotificationFree\Subscriber\OrderPlacedSubscriber" public="true">
            <argument type="service" id="Vhdev\AdminSmsOrderNotificationFree\Service\SmsService"/>
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService"/>
            <argument type="service" id="logger"/>
            <tag name="kernel.event_subscriber"/>
        </service>
    </services>
</container>
